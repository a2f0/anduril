ac.format.add        whowas_server $(dcol2)[$(col2)server    $(dcol2)]%n : @server@ $(dcol2)\(%n@args@$(dcol2))

ac.format.add               whowas     $(hcol1)whowas $(hcol2)@nick@$(dcol2)!$(col2)@user@$(dcol2)@$(col2)@host@$(dcol2)/$(ncol)@country@
ac.format.add           whowas_arg $(col1)$ac.len(-10 @type@)$(ncol) @args@
ac.format.add        whowas_server     $(col1)server $(ncol)@server@ $(dcol2)\($(ncol)@args@$(dcol2))

ac.format.add               whowas $(hcol2)whowas    $(col2): $(hcol1)@nick@$(dcol1)!$(col1)@user@$(dcol1)@$(col1)@host@ $(dcol1)[$(ncol)@country@$(dcol1)]
ac.format.add           whowas_arg 
ac.format.add        whowas_server 
